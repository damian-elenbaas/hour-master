{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hour-master/backend/auth": ["libs/backend/auth/src/index.ts"],
      "@hour-master/backend/decorators": [
        "libs/backend/decorators/src/index.ts"
      ],
      "@hour-master/backend/dto": ["libs/backend/dto/src/index.ts"],
      "@hour-master/backend/features/hour-scheme": [
        "libs/backend/features/hour-scheme/src/index.ts"
      ],
      "@hour-master/backend/user": ["libs/backend/user/src/index.ts"],
      "@hour-master/environments": ["libs/shared/environments/src/index.ts"],
      "@hour-master/frontend/auth": ["libs/frontend/auth/src/index.ts"],
      "@hour-master/frontend/common": ["libs/frontend/common/src/index.ts"],
      "@hour-master/frontend/features/hour-scheme": [
        "libs/frontend/features/hour-scheme/src/index.ts"
      ],
      "@hour-master/frontend/features/machine": [
        "libs/frontend/features/machine/src/index.ts"
      ],
      "@hour-master/frontend/features/project": [
        "libs/frontend/features/project/src/index.ts"
      ],
      "@hour-master/frontend/features/user": [
        "libs/frontend/features/user/src/index.ts"
      ],
      "@hour-master/shared/api": ["libs/shared/api/src/index.ts"],
      "@hour-master/shared/environments": [
        "libs/shared/environments/src/index.ts"
      ],
      "@hour-master/ui": ["libs/frontend/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
